<% selected_tab = params[:tab] ? params[:tab].to_s : tabs.first[:name] %>
<div id="testit_tabs" >
  <ul>
      <% tabs.each do |tab| -%>
       <li><%= link_to l(tab[:label]), tab[:url], :id => "tab-#{tab[:name]}", :class => (tab[:name] != selected_tab ? nil : 'selected') %></li>
      <% end -%>
  </ul>
</div>

